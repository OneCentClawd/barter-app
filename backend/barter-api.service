[Unit]
Description=Barter App Backend API
After=network.target postgresql.service

[Service]
Type=simple
User=Jack
WorkingDirectory=/home/Jack/barter-app/backend
ExecStart=/usr/bin/java -jar /home/Jack/barter-app/backend/target/barter-api-0.0.1-SNAPSHOT.jar
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# 环境变量（如需要可在此添加）
# Environment=SPRING_PROFILES_ACTIVE=prod

[Install]
WantedBy=multi-user.target
